            x:Class="PersonalFinanceApp.Mobile.HomePage">

    <TabbedPage>
        <ContentPage Title="Dashboard">
            <StackLayout>
                <Label Text="Welcome to Dashboard!" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
            </StackLayout>
        </ContentPage>

        <ContentPage Title="Transaction">
            <StackLayout>
                <Label Text="Welcome to Transaction!" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
            </StackLayout>
        </ContentPage>

        <ContentPage Title="Profile">
            <StackLayout>
                <Label Text="Welcome to Profile!" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
            </StackLayout>
        </ContentPage>
    </TabbedPage>

</TabbedPage>
